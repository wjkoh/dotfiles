[ui]
username = Woojong Koh <wjngkoh@gmail.com>
commitsubrepos = False
editor = vim
merge = internal:merge

[extdiff]
cmd.vimdiff = vimdiff

[subrepos]
allowed = True
git:allowed = True

[extensions]
color =
extdiff =
hgext.convert =
hgext.extdiff =
hgext.fetch =
hgext.graphlog =
progress =
purge =
rebase =
shelve =

[alias]
colordiff = diff --color=always
changed = status --no-status --added --modified --unknown
changeddot = status --no-status --change .

# https://github.com/junegunn/fzf/issues/1593#issuecomment-498007983.
vdiff = !$HG changed | fzf --exit-0 --preview '$HG colordiff {}' --bind 'enter:execute($HG vimdiff {} < /dev/tty > /dev/tty 2>&1)'
vdiffdot = !$HG changeddot | fzf --exit-0 --preview '$HG colordiff {} -c .' --bind 'enter:execute($HG vimdiff {} -c . < /dev/tty > /dev/tty 2>&1)'

%include .hgrc_google
