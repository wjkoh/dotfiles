Host *
  # Always use SSH2.
  Protocol 2
  # Forces SSHFS (with -o reconnect) to reconnect after a connection is lost and regained.
  ServerAliveInterval 15
  # Needed for remote X11.
  ForwardX11 yes

Host bitbucket.org
  # See https://unix.stackexchange.com/a/124170.
  IdentityFile ~/.ssh/id_rsa
  IdentitiesOnly yes

# SSH multiplexing. Do not apply it globally. SSHing to some hosts, for example
# Bitbucket, will encounter authentication errors.
# See https://companydoc.corp.google.com/company/corp/ssh/faq/index.md?cl=head#fewer-touches.
Host wjkoh0.mtv.corp.google.com wjkoh1.c.googlers.com
  ControlMaster auto
  ControlPath ~/.ssh/ctrl-%C
  ControlPersist yes
