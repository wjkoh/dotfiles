Host *
  # Always use SSH2.
  Protocol 2
  # Keep connections.
  ServerAliveInterval 30
  ServerAliveCountMax 6
  TCPKeepAlive no
  # See https://companydoc.corp.google.com/company/corp/ssh/faq/index.md?cl=head#fewer-touches.
  ControlMaster auto
  ControlPath ~/.ssh/master-%r@%h:%p
  ControlPersist 240m
