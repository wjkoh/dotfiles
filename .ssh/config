Host *
  # Always use SSH2.
  Protocol 2
  # Forces SSHFS (with -o reconnect) to reconnect after a connection is lost and regained.
  ServerAliveInterval 15
  # Needed for remote X11.
  ForwardX11 yes
  # See https://companydoc.corp.google.com/company/corp/ssh/faq/index.md?cl=head#fewer-touches.
  ControlMaster auto
  ControlPath ~/.ssh/ctrl-%C
  ControlPersist yes
